<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace에 우리가 사용할 인터페이스의 명칭이 들어가야 한다. -->
<mapper namespace="com.ohgiraffers.mvc.employee.model.dao.EmployeeMapper">

    <resultMap id="employeeResultMap" type="com.ohgiraffers.mvc.employee.model.dto.EmployeeDTO">
        <id property="empId" column="EMP_ID"/>
        <result property="empName" column="EMP_NAME"/>
        <result property="empNo" column="EMP_NO"/>
        <result property="email" column="EMAIL"/>
        <result property="phone" column="PHONE"/>
        <result property="deptCode" column="DEPT_CODE"/>
        <result property="jobCode" column="JOB_CODE"/>
        <result property="salLevel" column="SAL_LEVEL"/>
        <result property="salary" column="SALARY"/>
        <result property="bonus" column="BONUS"/>
        <result property="managerId" column="MANAGER_ID"/>
        <result property="hireDate" column="HIRE_DATE"/>
        <result property="entDate" column="ENT_DATE"/>
        <result property="entYn" column="ENY_YN"/>
    </resultMap>

    <select id="selectOneEmpById" resultMap="employeeResultMap">
        SELECT
        EMP_ID
        , EMP_NAME
        , DEPT_CODE
        , JOB_CODE
        , SALARY
        FROM EMPLOYEE
        WHERE ENT_YN = 'N'
        AND EMP_ID = #{ empId }
    </select>

    <select id="selectAllEmp" resultMap="employeeResultMap">

        SELECT
            EMP_ID
          , EMP_NAME
          , EMP_NO
          , EMAIL
          , PHONE
          , DEPT_CODE
          , JOB_CODE
          , SALARY
          , BONUS
          , MANAGER_ID
          , HIRE_DATE
          , ENT_DATE
          ,ENT_YN
        FROM EMPLOYEE
        WHERE ENT_YN = 'N'

    </select>

    <insert id="insertEmp">
        INSERT
           INTO EMPLOYEE
        (
        EMP_ID
        , EMP_NAME
        , EMP_NO
        , EMAIL
        , PHONE
        , DEPT_CODE
        , JOB_CODE
        , SAL_LEVEL
        , SALARY
        , BONUS
        , MANAGER_ID
        , HIRE_DATE
        , ENT_DATE
        ,ENT_YN
        )
        VALUES
        (
        SEQ_EID.NEXTVAL
        ,#{ empName}
        ,#{ empNo}
        ,#{ email}
        ,#{ phone}
        ,#{ deptCode}
        ,#{ jobCode}
        ,#{ salLevel}
        ,#{ salary}
        ,#{ bonus}
        ,#{ managerId}
        ,#{ hireDate}
        ,NULL
        ,DEFAULT
        )

    </insert>

    <update id="updateEmp">

        UPDATE EMPLOYEE
        EMP_NAME SET #{ empName}


        UPDATE EMPLOYEE
        EMP_ID SET #{ empId}

    </update>

    <delete id="deleteEmp">

         DELETE
         FROM EMPLOYEE
         WHERE EMP_Id =  #{ empId }
    </delete>

</mapper>